<section class="status-column" aria-label="A column including the status message and buttons to restart the game or change the theme.">

  <header>
    <div class="title" aria-label="A title graphic reading 'serpens.js'"></div>

    <div id="auth">
    <%= link_to 'Register', new_user_registration_path, class: 'button' %>
    <%= link_to 'Sign in', new_user_session_path, class: 'button' %>
    <%= link_to "Sign Out", destroy_user_session_path, data: { "turbo-method": :delete } %>
    </div>
  </header>
  
  <div class="status-wrap">
    <div class="play-button">PLAY</div>
    <div class="status-message" aria-label="A message spoken by a cartoon character which gives frequent updates on game progress.">
      <h2 id="message">
        It's the croissant harvest, help yourself!
      </h2>
    </div>

    <div class="restart-button" aria-label="A button to restart the game."></div>
    <br>

    <div class="theme-button" aria-label="A button to change the theme of the game to a dark mode."></div>
  </div>
</section>